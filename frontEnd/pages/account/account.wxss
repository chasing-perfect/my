/* pages/account/account.wxss */
.contain{
  overflow:auto;
  position:relative;
  background:#f5f5f5;
  height:100vh;
}
.top{
  width:100%;
  height:2rpx;
  box-shadow: 0 2rpx 10rpx 0 rgba(0, 0, 0, 0.1);
}
.selectArea{
  background:#fff;
  padding: 35rpx 28rpx 38rpx 39rpx;
}
.goodList{
  background:#fff;
  padding: 53rpx 25rpx 44rpx 26rpx;
}
.goodItem{
  background:#fff;
  position:relative;
  display:flex;
  height:199rpx;
}
.goodItem .pic{
  width: 188rpx;
  height:188rpx;
  border-radius:14rpx;
  background:red;
  margin-right:12rpx;
}
.descript text{
  display:block;
}
.descript text:first-child{
  font-size:34rpx;
  color:#333333;
}
.descript text:last-child{
  font-size:28rpx;
  color:#afafaf;
}
.itemInfo{
  position:absolute;
  bottom:0;
  right:0;
}
.itemInfo text{
  font-size:26rpx;
}
.itemInfo text:first-child{
  color:#999999;
  margin-right:25rpx;
}
.itemInfo text:last-child{
  color:#333333;
}
.discounts{
  display: flex;
  justify-content: space-between;
  padding:22rpx 22rpx 24rpx 23rpx;
  background:#fff;
  font-size:26rpx;
  margin:10rpx 0;
}
.discounts .discount{
  color:#333333;
}
.discounts view text{
  color:#999999;
}
.discounts view text:first-child{
  margin-right:21rpx;
}
.totalBox{
  background: #fff;
}
.totalBox view{
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  padding: 24rpx 25rpx;
}
.totalBox view:first-child{
  border-bottom: 1rpx solid #f5f5f5;
}
.message{
  display: flex;
  align-items: center;
  height: 74rpx;
  padding: 0 25rpx;
  font-size: 26rpx;
  background: #fff;
  margin: 10rpx 0;
}
.message text{
  margin-right: 62rpx;
  color: #333;
}
.message input{
  color: #999999;
}
.payBox{
  background: #fff;
}
.payBox .payItem{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:23rpx 25rpx 25rpx 25rpx;
}
.payBox .payItem:first-child{
  border-bottom: 1rpx solid #f5f5f5;
}
.payBox .payItem view image{
  width: 24rpx;
  height: 24rpx;
  margin-right: 24rpx;
}
.payBox .payItem view text{
  font-size: 26rpx;
  color: #333;
}
.payBox .payItem .pic{
  width: 24rpx;
  height: 27rpx;
}

.accountBox{
  position:fixed;
  bottom:0rpx;
  left:0;
  box-sizing:border-box;
  display:flex;
  justify-content: space-between;
  align-items: center;
  width:100%;
  background:#fff;
  padding:22rpx 27rpx 25rpx 24rpx;
  box-shadow:0 -10rpx 10rpx 0 #f7f7f7 inset;
}
.accountBox .pay text:first-child{
  font-size: 28rpx;
  color: #333333;
}
.accountBox .pay text:last-child{
  font-size: 30rpx;
  color: #e01616;
}
.goAccount{
  display:flex;
  align-items: center;
}
.goAccount .accountBtn{
  height:70rpx;
  line-height:70rpx;
  background:#dc3025;
  font-size:30rpx;
  color:#fff;
}
.goAccount text{
  font-size:30rpx;
  color:#e01616;
  margin-right:23rpx;
}
.totalCount{
  position:fixed;
  bottom:30rpx;
  width: 20rpx;
  height:20rpx;
  background:#df0000;
  border-radius:50%;
  color:#fffefe;
  font-size:18rpx;
  z-index:9999999999999999;
}